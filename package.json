{
  "name": "sci-fi-simulator",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "bin": {
    "sci-fi-simulator": "./server.js"
  },
  "build": {
    "appId": "com.mechphy.sci-fi-simulator",
    "productName": "Sci-Fi Simulator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/main.js",
      ".next/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "**/node_modules/sql.js/dist/*.wasm"
    ],
    "extraResources": [
      {
        "from": "node_modules/sql.js/dist",
        "to": "app/node_modules/sql.js/dist"
      },
      {
        "from": "components/esp.py",
        "to": "components/esp.py"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico",
      "executableName": "sci-fi-simulator",
      "artifactName": "sci-fi-simulator-${version}-win.${ext}"
    }
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "electron-build": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "prebuild": "node scripts/copy-python-script.js"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.511.0",
    "mb-util": "^1.1.30",
    "moment": "^2.30.1",
    "next": "^15.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sql": "^0.78.0",
    "sql.js": "^1.13.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/leaflet": "^1.9.18",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^28.3.3",
    "electron-builder": "^24.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.1.1",
    "nexe": "^4.0.0-rc.6",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}